			<UNIQUE />
		</index>
	</table>

	<table name="custom_track_orders">
		<field name="sched_conf_id" type="I8">
			<NOTNULL />
		</field>
		<field name="track_id" type="I8">
			<NOTNULL />
		</field>
		<field name="seq" type="F">
			<NOTNULL/>
